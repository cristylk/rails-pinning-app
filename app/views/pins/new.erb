    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
    <ul>
      <% @errors.full_messages.each do |msg| %>
        <li><%= #print the message here %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- <h1>Add a New Pin</h1> -->

<form class="form-horizontal">

	<%= form_for @pin do |f| %>

	<div class="form-group">
		<label for="pin_title" class="col-sm-2">Title</label>
		<div class="col-sm-6">
			<%= f.text_field :title %>
		</div>
	</div>

	<div class="form-group">
		<label for="pin_category_id" class="col-sm-2">Category</label>
		<div class="col-sm-2">
			<%= f.collection_select(:category_id, Category.all, :id, :name) %>
		</div>
	</div>

	<div class="form-group">
		<label for="pin_url" class="col-sm-2">URL</label>
		<div class="col-sm-10">
			<%= f.url_field :url %>
		</div>
	</div>
	
	<div class="form-group">
		<label for="pin_text" class="col-sm-2">About the Pin</label>
		<div class="col-sm-10">
			<%= f.text_field :text %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.submit "Create Pin" %>
	</div>

	<% end %>

</form>